            <TextView android:id="@id/tv_information" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium" android:text="@string/registration_information" android:layout_marginStart="@dimen/margin_small" android:layout_marginEnd="@dimen/margin_small" style="@style/MessageDialogText" />
            <FrameLayout android:id="@id/vg_button_next" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <Button android:id="@id/bt_continue" android:layout_width="fill_parent" android:layout_height="@dimen/registration_button_height" android:layout_margin="@dimen/registration_margin_button_next" android:text="@string/registration_continue" style="@style/PinkButton" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar android:id="@id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true" />
</RelativeLayout>