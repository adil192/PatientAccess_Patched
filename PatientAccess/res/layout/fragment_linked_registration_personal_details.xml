            <RadioGroup android:orientation="horizontal" android:id="@id/rg_row_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small">
                <RadioButton android:id="@id/rb_female" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/registration_female_label" android:layout_marginEnd="@dimen/padding_small" style="@style/RegistrationRadioButton" />
                <RadioButton android:id="@id/rb_male" android:layout_width="@dimen/registration_radio_button_width" android:layout_height="wrap_content" android:text="@string/registration_male_label" android:layout_marginEnd="@dimen/padding_small" style="@style/RegistrationRadioButton" />
            </RadioGroup>
            <RadioGroup android:orientation="vertical" android:id="@id/rg_row_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium">
                <RadioButton android:id="@id/rb_gender_not_specified" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/registration_not_specified_label" android:layout_marginEnd="@dimen/padding_small" style="@style/RegistrationRadioButton" />
            </RadioGroup>
            <TextView android:id="@id/tv_gender_error_message" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_medium" android:text="@string/registration_gender_is_required_error" android:layout_marginStart="@dimen/margin_small" style="@style/ErrorText" />
            <TextView android:id="@id/tv_house_number" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/registration_house_number_label" android:layout_marginStart="@dimen/margin_small" android:layout_marginEnd="@dimen/margin_small" style="@style/NavyBoldSubTitle" />
            <com.patientaccess.validation.widget.ValidatedEditTextView android:id="@id/vet_house_number" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_big" android:hint="@string/registration_house_number_hint" android:maxLength="@integer/house_length_limit_big" />
            <TextView android:id="@id/tv_postal_code" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_small" android:text="@string/registration_postal_code_label" android:layout_marginStart="@dimen/margin_small" android:layout_marginEnd="@dimen/margin_small" style="@style/NavyBoldSubTitle" />
            <com.patientaccess.validation.widget.ValidatedEditTextView android:id="@id/vet_postal_code" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/margin_most" android:hint="@string/registration_postal_code_hint" android:maxLength="@integer/post_code_length_limit" android:inputType="textPostalAddress" />
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@id/vg_button_next" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View style="@style/Divider" />
        <Button android:layout_gravity="end" android:id="@id/bt_next" android:layout_width="@dimen/registration_button_next_width" android:layout_height="@dimen/registration_button_height" android:layout_margin="@dimen/registration_margin_button_next" android:text="@string/text_next" style="@style/PinkButton" />
    </FrameLayout>
    <ProgressBar android:id="@id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true" />
</RelativeLayout>